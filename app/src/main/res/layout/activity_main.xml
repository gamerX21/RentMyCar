<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="417dp"
        android:layout_height="748dp"
        android:background="@drawable/main_background"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="-9dp" />

    <ImageView
        android:id="@+id/gloveSVG"
        android:layout_width="371dp"
        android:layout_height="594dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.492" />

    <EditText
            android:id="@+id/AdrAg"
            android:layout_width="295dp"
            android:layout_height="47dp"
            android:background="@drawable/input_shape"
            android:ems="10"
            android:hint="set email or phone number"
            android:inputType="textPersonName"
            android:paddingLeft="18dp"
            android:textColor="@color/colorSecondary"
            android:textSize="15dp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.338"
            android:textColorHint="@color/colorPrimary"
            />

    <EditText
        android:id="@+id/pwdAg"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:background="@drawable/input_shape"
        android:ems="10"
        android:hint="set password"
        android:inputType="textPersonName"
        android:paddingLeft="18dp"
        android:textColor="@color/colorSecondary"
        android:textColorHint="@color/colorPrimary"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AdrAg"
        app:layout_constraintVertical_bias="0.120000005" />

    <Button
        android:id="@+id/SignInBtn"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:background="@drawable/custom_main_button"
        android:text="Sign In"
        android:textColor="#fff"
        android:textSize="15dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pwdAg"
        app:layout_constraintVertical_bias="0.159" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textColor="@color/colorSecondary"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/AdrAg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2sd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or"
        android:textColor="@color/colorSecondary"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/gloveSVG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SignInBtn"
        app:layout_constraintVertical_bias="0.050000012" />

    <Button
        android:id="@+id/signUpBtnAg"
        android:layout_width="295dp"
        android:layout_height="47dp"
        android:background="@drawable/custom_main_button"
        android:capitalize="none"
        android:text="Sign Up"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/gloveSVG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.75" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/colorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/AdrAg"
        app:layout_constraintEnd_toEndOf="@+id/AdrAg"
        app:layout_constraintHorizontal_bias="0.004"
        app:layout_constraintStart_toStartOf="@+id/AdrAg"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.842" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#1976d2"
        app:layout_constraintBottom_toTopOf="@+id/pwdAg"
        app:layout_constraintEnd_toEndOf="@+id/pwdAg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/pwdAg"
        app:layout_constraintTop_toBottomOf="@+id/AdrAg" />

</androidx.constraintlayout.widget.ConstraintLayout>